{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend-nestjs && npm ci && npm run build"
  },
  "deploy": {
    "startCommand": "cd backend-nestjs && npm run start:prod",
    "healthcheckPath": "/health"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3001"
      }
    }
  }
}
