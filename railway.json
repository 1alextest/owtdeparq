{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend-nestjs && npm ci && npm run build"
  },
  "deploy": {
    "startCommand": "cd backend-nestjs && node dist/main.js",
    "healthcheckPath": "/api",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  }
}
