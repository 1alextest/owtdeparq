{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend-nestjs && npm ci --prefer-offline --no-audit && npm run build"
  },
  "deploy": {
    "startCommand": "cd backend-nestjs && npm run start:prod",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  }
}
